<mvc:View controllerName="cadastralMaintenance.view.Welcome" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" 
	xmlns:l="sap.ui.layout">
	<Page enableScrolling="false" title="{i18n>bem_vindo}">
		<content>
			
			<VBox width="auto" class="sapUiMediumMargin">
				<l:HorizontalLayout>
					<Label text="Para incluir, alterar ou excluir benefícios utilizar o menu ao lado."></Label>
				</l:HorizontalLayout>
				<l:HorizontalLayout class="sapUiSmallMarginTop">
					<Label text="Passo a Passo." design="Bold"></Label>
				</l:HorizontalLayout>
				<l:HorizontalLayout class="sapUiMediumMarginTop sapUiSmallMarginBegin">
					<Label text="1-	Selecionar Benefícios" design="Bold" class="underline"></Label>
				</l:HorizontalLayout>
				<l:HorizontalLayout class="sapUiSmallMarginTop sapUiMediumMarginBegin">
					<Label text="Utilizar o “menu ao lado” para selecionar o benefício desejado."></Label>
				</l:HorizontalLayout>
				<l:HorizontalLayout class="sapUiLargeMarginTop sapUiSmallMarginBegin">
					<Label text="2-	Executar a ação desejada “incluir, alterar ou excluir”" design="Bold" class="underline"></Label>
				</l:HorizontalLayout>
				<l:HorizontalLayout class="sapUiSmallMarginTop sapUiMediumMarginBegin">
					<Label text="Seguir com o preenchimento de dados conforme orientações de cada benefício."></Label>
				</l:HorizontalLayout>
				<l:HorizontalLayout class="sapUiMediumMarginBegin">
					<Label text="Incluir: " design="Bold"></Label>
					<Label text=" Selecionar o novo benefício"></Label>
				</l:HorizontalLayout>
				<l:HorizontalLayout class="sapUiMediumMarginBegin">
					<Label text="Alterar: " design="Bold"></Label>
					<Label text=" As informações já serão preenchidas na tela para alteração"></Label>
				</l:HorizontalLayout>
				<l:HorizontalLayout class="sapUiMediumMarginBegin">
					<Label text="Excluir: " design="Bold"></Label>
					<Label text=" Selecionar o benefício e fazer a exclusão"></Label>
				</l:HorizontalLayout>
				<l:HorizontalLayout class="sapUiLargeMarginTop sapUiSmallMarginBegin">
					<Label text="3-	Fazer “download do formulário de adesão”" design="Bold" class="underline"></Label>
				</l:HorizontalLayout>
				<l:HorizontalLayout class="sapUiSmallMarginTop sapUiMediumMarginBegin">
					<Label text="Para determinados tipos de benefícios no momento de sua adesão é necessário fazer download e assinar o mesmo."></Label>
				</l:HorizontalLayout>
				<l:HorizontalLayout class="sapUiLargeMarginTop sapUiSmallMarginBegin">
					<Label text="4-	Fazer “upload do formulário de adesão”" design="Bold" class="underline"></Label>
				</l:HorizontalLayout>
				<l:HorizontalLayout class="sapUiSmallMarginTop sapUiMediumMarginBegin">
					<Label text="Após finalizar o passo 3 fazer upload do formulário assinado e enviar para seguir com o processo de aprovação."></Label>
				</l:HorizontalLayout>
			</VBox>

